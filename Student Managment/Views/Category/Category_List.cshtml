@using StudentsManagment.Models;
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category_List";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">Categories</div>
        <div class="col-6">
            <a asp-action="Create_Category" class="btn btn-dark" asp-controller="Category"> <i class="bi bi-pencil-square" style="color:#ffe484"></i> &nbsp; Create New Category</a>
        </div>
    </div>
</div>
<h1>Category_List</h1>
<table class="table table-bordered table-responsive table-striped">
    <thead>
        <tr>
            <th>Sr. N.</th>
            <th>Name</th>
            <th>Description</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            var srn = 1;
            @foreach (var item in Model)
            {
                <tr>
                    <td>@srn</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.DisplayOrder</td>
                    <td role="group">
                        <a asp-action="Create_Category" asp-controller="Category" asp-route-id="@item.Id" title="Edit"><i class="bi bi-pencil"></i></a>
                        &nbsp;
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" title="Delete"><i class="bi bi-trash"></i></a>
                    </td>

                </tr>
                srn++;
            }
        }
    </tbody>
</table>

